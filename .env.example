# LLM Provider Configuration
# Options: "anthropic" (default) or "litellm"
LLM_PROVIDER=anthropic
MODEL_NAME=claude-3-5-sonnet-20241022

# Provider-specific API keys
ANTHROPIC_API_KEY=your_api_key_here
# OPENAI_API_KEY=sk-...
# GOOGLE_API_KEY=...

